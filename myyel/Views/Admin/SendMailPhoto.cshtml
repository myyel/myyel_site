@model IEnumerable<myyel.Entity.SendMailPhoto>

@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <title style="color:#626262">MyyeL Design</title>
    <title>@Html.Raw(ViewBag.title)</title>
    <meta name="keywords" content="@Html.Raw(ViewBag.keywords)" />
    <meta name="description" content="@Html.Raw(ViewBag.description)" />
    <meta name="viewport" content="width=device-width initial-scale=1, shrink-to-fit=no" />
    <link rel="shortcut icon" href="~/Content/img/logo02.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Swiper.css" />
    <link rel="stylesheet" href="~/Content/Admin-Site.css" />
    <link rel="stylesheet" href="~/Content/AdminHomeEdit.css" />

</head>
<body style="font-size:1vw;">
    <!--Admin_Navbar-->
    <div class="admin-navbar">
        <div class="admin-navbar-bg">
            <div class="admin-navbar-left">
                <a href="~/Home/Index"><img src="~/Content/img/logo-yan.png" /></a>
            </div>
            <div class="admin-navbar-right">
                <div class="admin-navbar-right-item">
                    @Html.ActionLink("Anasayfa", "Index", "Home")
                </div>
                <div class="admin-navbar-right-item">
                    @Html.ActionLink("Anasayfa İşlemleri", "HomeEdit", "Admin")
                </div>
                <div class="admin-navbar-right-item">
                    @Html.ActionLink("Kullanıcı İşlemleri", "UserPage", "Admin")
                </div>
                <div class="admin-navbar-right-item">
                    @Html.ActionLink("Proje Resmi Ekle", "ProjectImage", "Admin")
                </div>
                <div class="admin-navbar-right-item">
                    @Html.ActionLink("Blog İşlemleri", "Blog", "Admin")
                </div>
            </div>
        </div>

        <div class="admin-main-bg">

            <h2 class="image-title">Mail Gönder</h2>
            <hr />

            <div class="admin-main-bg">
                @using (Html.BeginForm("SendMailPhoto", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="form-horizontal">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group image-in">
                                                    <p>
                                                        @Html.TextBox("uploadedImage", "", new { type = "File" })
                                                    </p>
                                                    <div class="col-md-offset-2 col-md-10" style="font-size:1vw;">
                                                        <input type="submit" value="Ekle" class="btn btn-default" style="font-size: 1vw;" />
                                                        <h4 class="text-danger">
                                                            @ViewData["hata"]
                                                        </h4>
                                                        <h4 class="text-success">
                                                            @ViewData["sonuc"]
                                                        </h4>
                                                    </div>
                                                </div>
                                            </div>}
                <div class="project-list">
                    @{ if (Model != null)
                        {
                            foreach (var item in Model)
                            {
            <div class="project-image">
                <img src="~/Content/mail_images/@item.Id .jpg" />
                @Html.ActionLink("Sil", "SendMailPhotoDelete", new { id = item.Id })
            </div> }
    } }
                </div>


                <div class="project-list" style="margin-left: 2vw; font-size: 1vw;">
                    <div class="col-md-10">
                        <h4 style="font-size: 1.4vw;">@ViewData["title"]</h4>
                        <p>@ViewData["content"]</p>
                    </div>
                </div>

                <div class="project-list" style="margin-left:2vw;">
                    <div class="col-md-10">
                        <a href="/Admin/MailSended" class="btn btn-primary text-white" style="margin-left:60vw; font-size:1vw;">Gönder</a>
                    </div>
                </div>



            </div>

        </div>
        <hr />
    </div>
</body>
</html>

